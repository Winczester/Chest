
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div style="padding-top: 5%">
    <form method="post" asp-action="Create" asp-controller="User">
        <div class="form-group">
            <label>Email</label>
            <input class="formTextField" type="text" name="email"/>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="formTextField" type="text" name="password"/>
        </div>
        <div class="form-group">
            <input type="submit" class="formSubmitButton" value="Create"/>
        </div>
    </form>
</div>