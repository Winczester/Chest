
@{
    ViewData["Title"] = "Login";
}

<html>
<head>
    <title></title>
</head>
<body>
<div class="centerDiv">
    <form method="post" asp-controller="Account" asp-action="Login">
        <h2>Login</h2>
        <div class="form-group">
            <label>Email</label>
            <input class="formTextField" type="text" name="email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="formTextField" type="text" name="password" />
        </div>
        <div class="form-group">
            <input class="formSubmitButton" type="submit" value="Login" />
        </div>
    </form>
    <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
</div>
</body>
</html>


